@inproceedings{lim_iat_2012,
	author = {Yee Pin Lim and Shih-Fen Cheng},
	title = {Knowledge-driven autonomous commodity trading advisor},
	booktitle = {2012 IEEE/WIC/ACM International Conference on Intelligent Agent Technology},
